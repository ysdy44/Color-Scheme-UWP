<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--ListView Header-->
    <DataTemplate x:Name="AppListViewBaseHeader">
        <Border Height="50">
            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center"              
                            Content="~no more~" FontSize="14" FontFamily="Forte" 
                               Foreground="{ThemeResource AppBarItemDisabledForegroundThemeBrush}"/>
        </Border>
    </DataTemplate>
    <!--ListView Footer-->
    <DataTemplate x:Name="AppListViewBaseFooter" >
        <Border Height="50">
            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center"
                               Content="~end~" FontSize="20" FontFamily="Forte" 
                               Foreground="{ThemeResource AppBarItemDisabledForegroundThemeBrush}"/>
        </Border>
    </DataTemplate>

</ResourceDictionary>